<Window x:Class="WPFStudy.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFStudy"
        mc:Ignorable="d"
        Title="SignIn" Height="150" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None" Topmost="True">
    <Grid Height="150" Width="300">
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="205,103,0,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click" Grid.ColumnSpan="2"/>
        <Label x:Name="label" Content="Please enter your user name and password." HorizontalAlignment="Left" Margin="24,13,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="label1" Content="User name" HorizontalAlignment="Left" Margin="24,44,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Password" HorizontalAlignment="Left" Margin="24,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="98,48,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="182" Grid.ColumnSpan="2"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="98,79,0,0" VerticalAlignment="Top" Width="182" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
